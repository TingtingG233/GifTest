<UserControl x:Class="GifTest.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GifTest"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid  x:Name="gd" Width="300">
            <Image Source="\angles\bottom.png"></Image>
            <Image x:Name="media"  VerticalAlignment="Top"></Image>
            <Image Source="\angles\xian.png"></Image>
        </Grid>
        <Grid Height="50" Grid.Row="1">
            <Slider ValueChanged="PositiveProgress_ValueChanged" x:Name="PositiveProgress" Maximum="50" Minimum="0"></Slider>
        </Grid>
    </Grid>
</UserControl>
